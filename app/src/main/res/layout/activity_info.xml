<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33CCFF"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="379dp"
        android:layout_height="143dp"
        android:textAlignment="center"
        android:text="Islamiku merupakan aplikasi yang dirancang untuk membantu Anda dalam beribadah. Islamiku dilengkapi fitur Jadwal Sholat, Dzikir dan Cerita Nabi. Perancang aplikasi ini merupakan mahasiswa Teknik Informatika Universitas Singaperbangsa Karawang"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="189dp"
        android:layout_height="142dp"
        android:src="@drawable/logo"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="90dp" />

</androidx.constraintlayout.widget.ConstraintLayout>